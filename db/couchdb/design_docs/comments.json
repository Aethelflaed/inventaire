{
   "_id": "_design/comments",
   "language": "coffeescript",
   "views": {
       "byItemId": {
           "map": "(doc)->\n  if doc.item?\n    emit doc.item, null"
       },
       "byTransactionId": {
           "map": "(doc)->\n  if doc.transaction?\n    emit doc.transaction, null"
       }
   }
}