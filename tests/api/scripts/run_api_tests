#!/usr/bin/env bash

export NODE_ENV=tests
export NODE_APP_INSTANCE=tests-alt
timeout=20000

# Warn if the file doesn't contain ".test.coffee"
check_filename(){
  echo "$1" | grep ".test.coffee" > /dev/null || {
    echo -e "\e[0;33mWARNING: test file misses .test.coffee in filename: $1\e[0m"
  }
}

# If no test file is passed as argument, run all tests
if [ -z "$1" ]
then
  find tests/api -type f -name *.test.coffee | \
    xargs mocha --exit --timeout $timeout --require coffee-script/register
else
  files=''
  for arg in $@
  do
    # If this argument is a file path
    if [[ -f "$arg" ]] ; then
      check_filename $arg
      files="$files $arg"
    else
      # Add the directory test files to the list
      files="$files $arg/*.test.coffee"
    fi
  done
  echo "files: $files"
  mocha --exit --timeout $timeout --require coffee-script/register $files
fi
